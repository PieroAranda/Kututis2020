<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MonstruoActivity"
    android:background="@drawable/bg_fondo_monstruo">

    <Button
        android:id="@+id/buttonBackMonstruo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/boton_back_monstruo"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:id="@+id/llLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/llCaramelos">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fav"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/textViewMonstruoVida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/100"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCaramelos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_money"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/textViewMonstruoGolosinas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="4"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"/>
    </LinearLayout>




    <ImageView
        android:id="@+id/buttonNameMonstruo"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_my_monster"
        android:layout_below="@id/buttonBackMonstruo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/llMonstruo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNameMonstruo">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_fondo_noche_monstruo"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/buttonPreviousMonstruo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_previous"
                android:layout_marginStart="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="80dp"/>

            <ImageView
                android:id="@+id/imageViewMonstruo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/img_monstruo_feliz"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/buttonNextMonstruo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_next"
                android:layout_alignParentRight="true"
                android:layout_marginTop="80dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewMonstruoNombre"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Pepito"
            android:textStyle="bold"
            android:textColor="@color/colorBackground"
            android:textSize="25dp"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_fondo_monstruo_name"/>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/llHambre"
        android:layout_marginTop="20dp"
        android:layout_below="@id/llMonstruo"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_hambre"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textViewMonstruoHambre"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textStyle="bold"
            android:textColor="@color/colorBackground"
            android:textSize="25dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>



