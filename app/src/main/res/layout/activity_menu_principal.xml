<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menu_principal">

    <ImageView
        android:id="@+id/image_logout"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/boton_atras_turquesa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_praxias"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/boton_muecas"
        android:text="Praxias"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/button_fonemas_vocalicos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/boton_fonemas"
        android:text="Fonemas Vocálicos"
        android:layout_below="@id/button_praxias"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/button_fonemas_consonanticos"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/boton_menu_vocabulario"
        android:text="Fonemas Consonánticos"
        android:layout_below="@id/button_fonemas_vocalicos"/>

    <Button
        android:id="@+id/buttonLogros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="24dp"
        android:text="Logros"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonPerfil"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="24dp"
        android:text="Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

</RelativeLayout>