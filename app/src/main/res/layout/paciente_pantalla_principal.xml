<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_app_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:src="@drawable/image_placeholder"
        />

    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_app_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:text="Kututis"
        android:textSize="36dp"
        />

    <Button
        android:id="@+id/button_praxias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Praxias"
        app:layout_constraintTop_toBottomOf="@id/text_app_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_fonemas_vocalicos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fonemas Vocálicos"
        app:layout_constraintTop_toBottomOf="@id/button_praxias"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/button_fonemas_consonanticos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fonemas Consonánticos"
        app:layout_constraintTop_toBottomOf="@id/button_fonemas_vocalicos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>