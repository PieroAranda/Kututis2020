<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/imageViewPraxiasHistorialAtras"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/boton_atras_naranja_claro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_date"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_round"
        android:clickable="true"
        android:focusable="false"
        android:fontFamily="@font/dimbo_regular"
        android:hint="@string/ingrese_fecha"
        android:inputType="date"
        android:letterSpacing="0.05"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text=""
        android:textColorHint="#fbcfa5"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPraxiasHistorialAtras" />

    <ImageView
        android:id="@+id/Boton_Buscar_Videos"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toRightOf="@+id/edit_text_date"
        app:layout_constraintTop_toTopOf="@+id/edit_text_date"
        app:srcCompat="@drawable/boton_ingresar" />

    <VideoView
        android:id="@+id/VideoSeleccionado"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Boton_Buscar_Videos"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistorialVideoPorFecha"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/VideoSeleccionado"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>