<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FonemasConsonanticosActivity"
    android:background="@drawable/inicio_sesion_fondo">

    <ImageView
        android:id="@+id/imageViewConsonanticosAtras"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/boton_atras_naranja_claro"/>

    <ImageView
        android:id="@+id/imageViewConsonanticosTitulo"
        android:src="@drawable/vocabulario_leccion"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConsonanticosAtras"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/imageViewConsonanticosCordel"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/cordel"
        android:layout_marginLeft="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/recyclerFonemasConsonanticos"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerFonemasConsonanticos"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConsonanticosTitulo"
        android:layout_marginTop="50dp">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>