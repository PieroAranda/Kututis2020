<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.consonanticos.ConsonanticosResultadosActivity"
    android:background="@drawable/inicio_sesion_fondo">

    <ImageView
        android:id="@+id/imageViewConsonanticosResultadosAtras"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/atras_azul"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewConsonanticosResultadosContenedor"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/fondo_felicitaciones"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConsonanticosResultadosAtras"
        tools:layout_editor_absoluteX="48dp" />

    <ImageView
        android:id="@+id/imageViewConsonanticosResultadosContenedorPuntaje"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/fondo_puntaje"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewConsonanticosResultadosContenedor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dimbo_regular"
        android:text="LecciÃ³n correcta"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewConsonanticosResultadosContenedorPuntaje"
        app:layout_constraintStart_toStartOf="@+id/imageViewConsonanticosResultadosContenedorPuntaje"
        app:layout_constraintBottom_toTopOf="@+id/imageViewConsonanticosResultadosContenedorPuntaje"/>


    <TextView
        android:id="@+id/textViewConsonanticosResultadosPuntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dimbo_regular"
        android:layout_marginTop="2dp"
        android:text="10 / 10"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorBackground"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewConsonanticosResultadosContenedorPuntaje"
        app:layout_constraintStart_toStartOf="@+id/imageViewConsonanticosResultadosContenedorPuntaje"
        app:layout_constraintTop_toTopOf="@+id/imageViewConsonanticosResultadosContenedorPuntaje" />

    <ImageView
        android:id="@+id/imageViewConsonanticosResultadosRepetir"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/boton_repetir"
        app:layout_constraintTop_toBottomOf="@+id/imageViewConsonanticosResultadosContenedor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>