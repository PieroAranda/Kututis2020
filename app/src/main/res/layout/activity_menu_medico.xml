<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/inicio_sesion_fondo">

    <ImageView
        android:id="@+id/imageViewMedicoInfoAtras"
        android:layout_width="96dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/atras_azul"
        />

    <ImageView
        android:id="@+id/ivMiMedico"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/labelmidoctor"
        app:layout_constraintTop_toBottomOf="@id/imageViewMedicoInfoAtras"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_edit_NombreMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivMiMedico"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombres"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edit_NombreMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageViewMedicoInfoAtras"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:singleLine="true"
            android:maxLength="25"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ áéíóúÁÉÍÓÚ"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="24dp"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_ApellidoMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_edit_NombreMedico"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edit_ApellidoMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_edit_NombreMedico"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:maxLength="25"
            android:singleLine="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ áéíóúÁÉÍÓÚ"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="24dp"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_CorreoMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_edit_ApellidoMedico"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edit_CorreoMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_edit_ApellidoMedico"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:maxLines="1"
            android:clickable="true"
            android:focusable="false"
            android:inputType="date"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="24dp"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_CelularMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_edit_CorreoMedico"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celular"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edit_CelularMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_edit_CorreoMedico"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:digits="0123456789"
            android:inputType="phone"
            android:maxLength="9"
            android:imeOptions="actionNext"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="24dp"
            android:letterSpacing="0.05"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>