<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/inicio_sesion_fondo">

    <ImageView
        android:id="@+id/imageViewEditarPerfil2Atras"
        android:layout_width="96dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/atras_azul"
        />

    <ImageView
        android:id="@+id/ivMiPerfil"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/miperfil"
        app:layout_constraintTop_toBottomOf="@id/imageViewEditarPerfil2Atras"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_edit_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivMiPerfil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/edit_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageViewEditarPerfil2Atras"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="24dp"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_Contrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_edit_Email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/edit_Contrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_edit_Email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:inputType="textPassword"
            android:maxLength="16"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textColorHint="#fbcfa5"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_RepetirContrasenia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_edit_Contrasenia"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repita contraseña"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/edit_RepetirContrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_edit_Contrasenia"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:inputType="textPassword"
            android:maxLength="16"
            android:imeOptions="actionNext"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="24dp"
            android:letterSpacing="0.05"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/button_Editar"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:text="Editar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/boton_guardar"/>

</androidx.constraintlayout.widget.ConstraintLayout>