<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/alertImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/trophy"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Felicitaciones"
        android:layout_below="@id/alertImage"
        android:fontFamily="@font/dimbo_regular"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>
    <TextView
        android:id="@+id/alertSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ha conseguido un logro"
        android:layout_below="@id/alertTitle"
        android:fontFamily="@font/dimbo_regular"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <ImageButton
        android:id="@+id/alertButton"
        android:layout_marginTop="25dp"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/boton_done"
        android:layout_below="@id/alertSubtitle"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>