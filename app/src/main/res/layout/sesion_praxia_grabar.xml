<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/imageViewPraxiasAtras"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/boton_atras_naranja_claro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonHistorailVideos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:enabled="false"
        android:onClick="goToHistorialVideos"
        android:text="Historial"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPraxiasAtras">

        <VideoView
            android:id="@+id/videoEjemploPraxia"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="24dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/playVideoEjemplo"
        android:layout_width="143dp"
        android:layout_height="138dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutVideo"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="154dp"
        android:layout_height="142dp"
        app:layout_constraintLeft_toRightOf="@+id/playVideoEjemplo"
        app:layout_constraintTop_toTopOf="@+id/playVideoEjemplo"
        app:srcCompat="@android:drawable/presence_video_online" />

</androidx.constraintlayout.widget.ConstraintLayout>