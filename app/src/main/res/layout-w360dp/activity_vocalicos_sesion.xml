<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/imageViewVocalicosSesionAtras"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/boton_atras_naranja_claro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonHistorialAudios"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:onClick="goToHistorialAudios"
        android:src="@drawable/historial_boton"
        android:text="Historial"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPraxiasHistorialCordel"
        android:layout_width="160dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/cordel_corto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ImageConsonante" />

    <ImageView
        android:id="@+id/ImageConsonante"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/banderin_turquesa"
        app:layout_constraintEnd_toEndOf="@+id/textViewVocalicosSesionFonema"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewVocalicosSesionFonema"
        app:layout_constraintTop_toTopOf="@+id/textViewVocalicosSesionFonema"></ImageView>

    <TextView
        android:id="@+id/textViewVocalicosSesionFonema"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/dimbo_regular"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="MA"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btn_rec"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/boton_grabar" />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/boton_reproducir" />

        <Button
            android:id="@+id/buttonEnvio2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/boton_enviar"
            android:enabled="false" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>