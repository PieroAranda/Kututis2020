<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/inicio_sesion_fondo">

    <ImageView
        android:id="@+id/imageViewRegistro3Atras"
        android:layout_width="96dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/atras_azul"
        />

    <ImageView
        android:id="@+id/ivRegistroName3"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:background="@drawable/registrolabel"
        app:layout_constraintTop_toBottomOf="@id/imageViewRegistro3Atras"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_register_PetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivRegistroName3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de mascota"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edit_text_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imageViewRegistro3Atras"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text=""
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ áéíóúÁÉÍÓÚ"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:background="@drawable/edittext_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="@font/dimbo_regular"
            android:textSize="24dp"
            android:textColorHint="#fbcfa5"
            android:letterSpacing="0.05"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>



    <ImageView
        android:id="@+id/image_pet"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_register_PetName"
        android:layout_marginTop="16dp"
        android:src="@drawable/kututis_moustro_2"
        />

    <ImageView
        android:id="@+id/image_arrow_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_chevron_left_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/image_pet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_pet"
        android:layout_marginTop="118dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/image_arrow_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_chevron_right_black_24dp"
        app:layout_constraintLeft_toRightOf="@+id/image_pet"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_pet"
        android:layout_marginTop="118dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="Registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/boton_ingresar"/>

</androidx.constraintlayout.widget.ConstraintLayout>