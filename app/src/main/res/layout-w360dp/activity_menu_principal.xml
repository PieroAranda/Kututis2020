<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menu_categorias">

    <ImageView
        android:id="@+id/image_logout"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/boton_atras_turquesa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/button_praxias"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="260dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/boton_muecas"
        android:text="Praxias"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/button_fonemas_vocalicos"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/boton_menu_vocales"
        android:text="Fonemas Vocálicos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_praxias" />

    <ImageView
        android:id="@+id/button_fonemas_consonanticos"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/boton_menu_vocabulario"
        android:text="Fonemas Consonánticos"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_fonemas_vocalicos" />
</androidx.constraintlayout.widget.ConstraintLayout>