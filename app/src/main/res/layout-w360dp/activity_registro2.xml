<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/inicio_sesion_fondo">

    <ImageView
        android:id="@+id/imageViewRegistro2Atras"
        android:layout_width="96dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/atras_azul"
        />

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageViewRegistro2Atras"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="48dp"
        android:text=""
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_round"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:fontFamily="@font/dimbo_regular"
        android:textSize="24dp"
        android:hint="Correo"
        android:textColorHint="#fbcfa5"
        android:letterSpacing="0.05"/>

    <EditText
        android:id="@+id/edit_text_password_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:inputType="textPassword"
        android:maxLength="16"
        android:background="@drawable/edittext_round"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:fontFamily="@font/dimbo_regular"
        android:textSize="24dp"
        android:hint="Contraseña"
        android:textColorHint="#fbcfa5"
        android:letterSpacing="0.05"/>

    <EditText
        android:id="@+id/edit_text_password_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:inputType="textPassword"
        android:maxLength="16"
        android:imeOptions="actionNext"
        android:background="@drawable/edittext_round"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:fontFamily="@font/dimbo_regular"
        android:textSize="24dp"
        android:hint="Repita contraseña"
        android:textColorHint="#fbcfa5"
        android:letterSpacing="0.05"/>

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/boton_siguiente"/>

</androidx.constraintlayout.widget.ConstraintLayout>